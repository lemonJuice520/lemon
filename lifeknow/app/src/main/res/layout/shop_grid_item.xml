<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_farmers_shop"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/txt_Storename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"

            android:layout_toRightOf="@+id/img_farmers_shop"
            android:text="@string/productname"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_productname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_Storename"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_Storename"
            android:text="红富士"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_Operationtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_Storename"
            android:layout_below="@+id/txt_Storename"
            android:layout_toRightOf="@+id/img_farmers_shop"
            android:text="@string/jianjei"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_abstract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_Operationtime"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_Operationtime"
            android:text="原生态红富士产品"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/txt_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/txt_Operationtime"
            android:layout_below="@+id/txt_Operationtime"
            android:text="@string/danjia"
            android:textColor="@color/colorBlack"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_product"
            android:layout_below="@+id/txt_Operationtime"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_Operationtime"
            android:text="58"
            android:textColor="@color/colorRed"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_yuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_alignTop="@+id/txt_product"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_sun"
            android:text="元/斤"
            android:textColor="@color/colorRed"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txt_favourable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_product"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/img_farmers_shop"
            android:text="@string/favourable"
            android:textColor="@color/colorBlack"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_favourable2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_favourable"
            android:layout_below="@+id/txt_product"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_favourable"
            android:text="99"
            android:textColor="@color/colorRed"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_difference"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_favourable"
            android:layout_below="@+id/txt_product"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_favourable2"
            android:text="@string/difference"
            android:textColor="@color/colorBlack"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_difference2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_difference"
            android:layout_below="@+id/txt_product"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_difference"
            android:text="2"
            android:textColor="@color/colorRed"
            android:textSize="12dp" />


        <TextView
            android:id="@+id/txt_messageboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_difference2"
            android:layout_below="@+id/txt_product"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/txt_difference2"
            android:text="@string/messageboard"
            android:textColor="@color/colorBlack"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_messageboard2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txt_messageboard"
            android:layout_below="@+id/txt_product"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_messageboard"
            android:text="10"
            android:textColor="@color/colorRed"
            android:textSize="12dp" />

        <Button
            android:id="@+id/txt_shopping"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/txt_Operationtime"
            android:layout_below="@+id/txt_favourable"
            android:text="加入购物车"
            android:textColor="@color/colorBlack"
            android:textSize="10dp" />

        <Button
            android:id="@+id/btn_purchase"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/txt_favourable"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/txt_shopping"
            android:text="购买"
            android:textColor="@color/colorBlack"
            android:textSize="10dp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.01dp"
        android:background="@color/colorlFewnchgrey"></RelativeLayout>

</LinearLayout>
