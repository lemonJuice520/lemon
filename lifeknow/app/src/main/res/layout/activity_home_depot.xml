<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
    tools:context="com.kb.firstitem.HomeDepotActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <com.kb.utils.RoundImage
            android:id="@+id/img_bus"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            imagecontrol:border_outside_color="#FFFF0000"
            imagecontrol:border_thickness="1dp"
            android:src="@mipmap/qq"/>
        <com.kb.utils.RoundImage
            android:id="@+id/img_day"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_bus"
            imagecontrol:border_outside_color="#FFFF0000"
            imagecontrol:border_thickness="1dp"
            android:src="@mipmap/qq"/>

        <com.kb.utils.RoundImage
            android:id="@+id/img_lothes"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="45dp"
            imagecontrol:border_outside_color="#FFFF0000"
            imagecontrol:border_thickness="1dp"
            android:src="@mipmap/qq"/>
        <com.kb.utils.RoundImage
            android:layout_weight="1"
            android:id="@+id/img_bay"
            android:layout_width="0dp"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/img_bus"
            imagecontrol:border_outside_color="#FFFF0000"
            imagecontrol:border_thickness="1dp"
            android:src="@mipmap/qq"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="25dp"
        android:orientation="horizontal">
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="交通工具"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_day"
            android:text="交通工具"/>

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="交通工具"/>
        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="交通工具"/>
    </LinearLayout>




</LinearLayout>
