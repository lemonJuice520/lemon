<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
        android:id="@+id/img_store"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/ic_launcher" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <TextView
        android:id="@+id/txt_Storename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="水果超市"
        android:textColor="@color/colorBlack"
        android:textSize="15dp" />
        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_Storename"
            android:rating="3.5"
            style="@android:style/Widget.Holo.RatingBar.Small" />

        <TextView
        android:id="@+id/txt_grade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/txt_Storename"
        android:layout_toRightOf="@+id/ratingBar"
        android:textSize="12dp"
        android:text="8.0" />



        <TextView
        android:id="@+id/txt_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
        android:layout_below="@+id/ratingBar"
        android:text="鲜花"
        android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/ratingBar"
            android:layout_toRightOf="@+id/txt_type"
            android:text="8:30-22:00"
            android:textSize="12dp" />


        <TextView
        android:id="@+id/txt_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_time"
        android:layout_marginTop="5dp"
        android:text="大学城"
        android:textSize="12dp" />

        <TextView
            android:id="@+id/txt_distancs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_address"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:text="﹤1.2km"/>
    </RelativeLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="0.01dp"
        android:background="@color/colorlFewnchgrey">
    </RelativeLayout>
</LinearLayout>
