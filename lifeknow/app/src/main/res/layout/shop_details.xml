<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <include
        android:id="@+id/R_top"
        layout="@layout/titlebar1">

    </include>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/R_top"
        android:layout_above="@+id/re_bo"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_details_Storename"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="花果山水果铺"
                    android:textColor="@color/colorBlack"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/txt_pingjia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerInParent="true"
                    android:text="@string/shop_appraise"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <RatingBar
                    android:id="@+id/img_xing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txt_pingjia"
                    android:rating="3.5"
                    style="@android:style/Widget.Holo.RatingBar.Small"/>


                <TextView
                    android:id="@+id/txt_fen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/img_xing"
                    android:text="8.0"
                    android:textSize="@dimen/activity_vertical_margin" />

                <TextView
                    android:id="@+id/txt_fen2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/txt_fen"
                    android:text="分"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/activity_vertical_margin" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/businesstime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:text="@string/businesstime"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_businesstime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/businesstime"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/businesstime"
                    android:text="8:50-18:50"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_shop_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/businesstime"
                    android:layout_below="@+id/businesstime"
                    android:layout_marginTop="5dp"
                    android:text="@string/shop_add"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <ImageView
                    android:id="@+id/img_addmap"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/businesstime"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/txt_shop_add"
                    android:src="@mipmap/location" />

                <TextView
                    android:id="@+id/txt_shop_add2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/businesstime"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/img_addmap"
                    android:text="康居西城3组团"
                    android:textColor="@color/colorBlue"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_shop_contactway"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/businesstime"
                    android:layout_below="@+id/txt_shop_add"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/txt_shop_add"
                    android:text="@string/shop_contactway"
                    android:textColor="@color/colorBlack"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/txt_shop_contactway2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_shop_add"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@+id/txt_shop_contactway"
                    android:text="157****5972"
                    android:textColor="@color/colorRed"
                    android:textSize="12dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/R_img"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">

                <ImageView
                    android:id="@+id/img_a"
                    android:layout_width="fill_parent"
                    android:layout_height="190dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="5dp"
                    android:layout_below="@+id/img_a"
                    android:background="@color/colorlFewnchgrey"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <com.kb.view.MyGridView
                    android:id="@+id/farmers_shop_grid"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:listSelector="#00000000"></com.kb.view.MyGridView>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@+id/re_bo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/bgcolor"
        android:weightSum="1">
        <ImageButton
            android:id="@+id/img_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:background="@color/transparent"
            android:src="@mipmap/phone"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/img_phone"/>

        <ImageButton
            android:id="@+id/img_coll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_phone"
            android:layout_marginLeft="18dp"
            android:background="@color/transparent"
            android:src="@mipmap/collect"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_phone"
            android:layout_below="@+id/img_coll"
            android:layout_marginLeft="25dp"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            android:text="收藏"/>
        <ImageButton
            android:id="@+id/img_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_coll"
            android:layout_marginLeft="18dp"
            android:background="@color/transparent"
            android:src="@mipmap/share1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/img_coll"
            android:layout_below="@+id/img_share"
            android:layout_marginLeft="25dp"
            android:textSize="10dp"
            android:textColor="@color/colorBlack"
            android:text="分享"/>
        <Button
            android:id="@+id/btn_gou"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colortitle"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:textSize="12dp"
            android:text="加入购物车"
            android:layout_toLeftOf="@+id/button"
            android:layout_toStartOf="@+id/button" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_marginLeft="2dp"
            android:textSize="12dp"
            android:background="@color/colorchrysanthemumyellow"
            android:layout_marginRight="10dp"
            android:text="立即购买"
            android:id="@+id/button" />
    </RelativeLayout>
</RelativeLayout>
