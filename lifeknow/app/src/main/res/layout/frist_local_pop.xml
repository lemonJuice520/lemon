<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/bgcolor">

   <GridView
       android:id="@+id/popu_grid"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_above="@+id/re_bottom"
       android:descendantFocusability="blocksDescendants"
       android:layout_marginLeft="10dp"
       android:layout_marginRight="10dp"
       android:columnWidth="30dp"
       android:numColumns="3">

   </GridView>

   <RelativeLayout
       android:id="@+id/re_bottom"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true">

      <View
          android:id="@+id/view_pop"
          android:layout_width="fill_parent"
          android:layout_height="0.01dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:background="@color/colorBlack"/>
      <ImageView
          android:id="@+id/img_local_pop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginLeft="10dp"
          android:paddingTop="20dp"
          android:src="@mipmap/ic_location2"/>
      <TextView
          android:id="@+id/txt_pop_local"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:paddingTop="20dp"
          android:layout_marginLeft="10dp"
          android:layout_toRightOf="@+id/img_local_pop"
          android:text="当前城市：？？"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_toLeftOf="@+id/img_chage"
          android:layout_marginRight="12dp"
          android:paddingTop="20dp"
          android:text="切换"/>
      <ImageView
          android:id="@+id/img_chage"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_centerVertical="true"
          android:layout_alignParentRight="true"
          android:layout_marginRight="12dp"
          android:paddingTop="15dp"
          android:paddingBottom="20dp"
          android:src="@mipmap/right_arrow_icon"/>
      <View
          android:id="@+id/view_pop2"
          android:layout_width="fill_parent"
          android:layout_height="0.01dp"
          android:layout_marginLeft="10dp"
          android:layout_marginRight="10dp"
          android:layout_marginBottom="10dp"
          android:layout_below="@+id/img_chage"
          android:background="@color/colorBlack"/>
   </RelativeLayout>

</RelativeLayout>
